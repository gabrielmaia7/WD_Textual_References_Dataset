<script>



jQuery(function($){
    // custom paging
    var $status = $('.paging-info');
    var $slickElement = $('.rotating-featured-content-banner-alternative-theme');
    $slickElement.on('init reInit afterChange', function(event, slick, currentSlide, nextSlide){
        var i = (currentSlide ? currentSlide : 0) + 1;
        $status.text(i + '/' + slick.slideCount);
    });
    $('.rotating-featured-content-banner-alternative-theme').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        rows: 0, // a fix for extra divs issue
        responsive: [{
            breakpoint: 480,
            settings: {
                dots: false
            }
        }],
        autoplay: true,
        autoplaySpeed: 7000,
        adaptiveHeight: true,
        
        dots: false
    });

    
});


</script>




