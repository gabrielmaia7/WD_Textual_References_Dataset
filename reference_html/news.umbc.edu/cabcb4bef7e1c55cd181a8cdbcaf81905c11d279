                        <span>Email</span>
                        <input class="sign-up-email" type="email" required="required" name="subscriber_email" />
                    </label>
                    <input type="submit" class="button button-primary mt-1" value="Sign Up" name="sign_up_submit_button" />
                </form></div>`;
                
                footer_root.shadowRoot.querySelector(".footer-form").addEventListener('submit', event => {
                    event.preventDefault()

                    let temp_email = footer_root.shadowRoot.querySelector('.temp-email').value
                    
                    lity(signupmodal)
                    
                    document.querySelector('.sign-up-email').value = temp_email
                                     
                })
                
                document.querySelector("body").addEventListener("submit", event => {
                    if (event.target.id === "sign-up-form") {
                        event.preventDefault()
                        let sign_up_form = document.getElementById('sign-up-form')
                        let sign_up_alert = document.querySelector('.sign-up-alert')
                        let response_message
                        
                        fetch("https://www.umbc.edu/emma_signup/emma-signup.php", {
                            method: sign_up_form.method,
                            body: new FormData(sign_up_form)
                        })
                        .then(response => response.json())
                        .then(data => response_message = data)
                        .catch(error => sign_up_alert.innerHTML += error.message)
                        .finally((data) => {
                            sign_up_form.classList.add('hidden')
                            sign_up_alert.innerHTML += response_message.message
                        });
                    }
                })

                if (window.applyFocusVisiblePolyfill != null) {
                    window.applyFocusVisiblePolyfill(footer_root.shadowRoot);
                }
            }
        })
        
    </script>

    

